@model Equipe
@{
    ViewData["Title"] = "Equipes";
}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.2/css/all.min.css" integrity="sha512-HK5fgLBL+xu6dm/Ii3z4xhlSUyZgTT9tuc/hSrtw6uzJOvgRr2a9jyxxT1ely+B+xFAmJKVSTbpM/CuL7qxO8w==" crossorigin="anonymous" />

<div class="titulo_pagina">
    <h1>Cadastro de @ViewData["Title"]</h1>
</div>
<form class="cadastro" method= "POST" action= '@Url.Action("Cadastrar")' enctype="multipart/form-data">
    
    <div class="campo">
        <label> ID</label>
        <input type="text" name="IdEquipe"/>
    </div>

    <div class="campo">
        <label>Nome</label>
        <input type="text" name="Nome"/>
    </div>

    <div class="campo">
        <label>Imagem</label>
        <input type="file" name="Imagem"/>
    </div>

    <button class="gradient btn" type="submit">Cadastrar</button>
</form>

<table class="table table-striped table-responsive">
    <thead>
        <th>ID</th>
        <th>Nome</th>
        <th>Foto</th>
        <th>Ações</th>
    </thead>
    <tbody>
        @foreach (Equipe equipe in ViewBag.Equipes)
        {
            <tr>
                <td>@equipe.IdEquipe</td>
                <td>@equipe.Nome</td>
                <td><img src="/img/Equipes/@equipe.Imagem" alt="Imagem da equipe @equipe.Nome" width="40"></td>
                <td><a asp-area="Link para excluir uma equipe" asp-controller="Equipe"asp-action="Excluir" asp-route-id="@equipe.IdEquipe"><i class="fas fa-trash"></i></a></td>
            </tr>
        }
    </tbody>
</table>